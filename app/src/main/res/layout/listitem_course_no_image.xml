<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutCourseListItemNoImage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewCourseListItemNoImage"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/colorRed"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/codeTextViewCourseListItemNoImage"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/codeTextViewCourseListItemNoImage"
        app:layout_constraintTop_toBottomOf="@+id/codeTextViewCourseListItemNoImage" />

    <TextView
        android:id="@+id/codeTextViewCourseListItemNoImage"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/courseTitlePlaceholder"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/cardViewCourseListItemNoImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/titleTextViewCourseListItemNoImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingTop="8dp"
        android:text="@string/courseTitlePlaceholder"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/subTitleTextViewCourseListItemNoImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/codeTextViewCourseListItemNoImage"
        app:layout_constraintTop_toTopOf="@+id/codeTextViewCourseListItemNoImage"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/subTitleTextViewCourseListItemNoImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/courseTitlePlaceholder"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/codeTextViewCourseListItemNoImage"
        app:layout_constraintEnd_toEndOf="@+id/titleTextViewCourseListItemNoImage"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/titleTextViewCourseListItemNoImage"
        app:layout_constraintTop_toBottomOf="@+id/titleTextViewCourseListItemNoImage" />

</androidx.constraintlayout.widget.ConstraintLayout>